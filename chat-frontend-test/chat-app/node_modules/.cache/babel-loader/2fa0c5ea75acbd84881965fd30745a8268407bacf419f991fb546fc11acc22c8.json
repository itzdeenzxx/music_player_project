ge() {\n        if (this.userInput.trim() === '') return;\n  \n        const userMessage = this.userInput;\n        this.messages.push({ user: userMessage, bot: '' });\n        this.userInput = '';\n  \n        try {\n          const response = await axios.post('YOUR_API_ENDPOINT', {\n            message: userMessage,\n          });\n  \n          // สมมุติว่า API ตอบกลับด้วยข้อความในฟิลด์ 'reply'\n          const botReply = response.data.reply;\n          this.messages[this.messages.length - 1].bot = botReply;\n        } catch (error) {\n          console.error('Error sending message:', error);\n        }\n      },\n    },\n  };\n  </script>\n  \n  <style scoped>\n  .chat-container {\n    max-width: 400px;\n    margin: 0 auto;\n    padding: 20px;\n    border: 1px solid #ccc;\n    border-radius: 10px;\n  }\n  .messages {\n    height: 300px;\n    overflow-y: auto;\n    border: 1px solid #ddd;\n    margin-bottom: 10px;\n    padding: 10px;\n  }\n  .message {\n    margin-bottom: 10px;\n  }\n  </style>\n  "],"mappings":";AAqBE,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,QAAQ,EAAE;IACZ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,WAAWA,CAAA,EAAG;MAClB,IAAI,IAAI,CAACH,SAAS,CAACI,IAAI,CAAC,MAAM,EAAE,EAAE;MAElC,MAAMC,WAAU,GAAI,IAAI,CAACL,SAAS;MAClC,IAAI,CAACC,QAAQ,CAACK,IAAI,CAAC;QAAEC,IAAI,EAAEF,WAAW;QAAEG,GAAG,EAAE;MAAG,CAAC,CAAC;MAClD,IAAI,CAACR,SAAQ,GAAI,EAAE;MAEnB,IAAI;QACF,MAAMS,QAAO,GAAI,MAAMX,KAAK,CAACY,IAAI,CAAC,mBAAmB,EAAE;UACrDC,OAAO,EAAEN;QACX,CAAC,CAAC;;QAEF;QACA,MAAMO,QAAO,GAAIH,QAAQ,CAACV,IAAI,CAACc,KAAK;QACpC,IAAI,CAACZ,QAAQ,CAAC,IAAI,CAACA,QAAQ,CAACa,MAAK,GAAI,CAAC,CAAC,CAACN,GAAE,GAAII,QAAQ;MACxD,EAAE,OAAOG,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,wBAAwB,EAAEA,KAAK,CAAC;MAChD;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}