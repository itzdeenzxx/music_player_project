es = await axios.get(`http://localhost:3000/users/getss`)\r\n          this.memEmail = res.data.email\r\n          this.memName = res.data.name\r\n          this.dutyId = res.data.duty\r\n        } catch (err) {\r\n          console.error(err)\r\n        }\r\n      },\r\n  \r\n      checkImage() {\r\n        const image = new Image()\r\n        image.src = `http://localhost:3000/img_mem/${this.memEmail}.jpg`\r\n        image.onload = () => {\r\n          this.imageExists = true\r\n        }\r\n        image.onerror = () => {\r\n          this.imageExists = false\r\n        }\r\n      },\r\n    }\r\n  }\r\n  </script>\r\n  \r\n  <style scoped>\r\n  /* Optional: Add any additional custom styles here */\r\n  </style>"],"mappings":"AA+GE,OAAOA,KAAI,MAAO,OAAM;AACxBA,KAAK,CAACC,QAAQ,CAACC,eAAc,GAAI,IAAG;AAEpC,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,IAAI;MACdC,OAAO,EAAE,IAAI;MACbC,MAAM,EAAE,IAAI;MACZC,WAAW,EAAE,KAAK;MAClBC,WAAW,EAAE,IAAI;MACjBC,IAAI,EAAE,IAAI;MACVC,cAAc,EAAEC,IAAI,CAACC,GAAG,CAAC;IAC3B;EACF,CAAC;EAED,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAM,IAAI,CAACC,UAAU,CAAC;IACtB,IAAI,CAACC,UAAU,CAAC;EAClB,CAAC;EAEDC,OAAO,EAAE;IACPC,YAAYA,CAACC,CAAC,EAAE;MACd,IAAI,CAACT,IAAG,GAAIS,CAAC,CAACC,MAAM,CAACC,KAAK,CAAC,CAAC;;MAE5B;MACA,IAAI,IAAI,CAACX,IAAI,EAAE;QACb,IAAI,CAAC,IAAI,CAACA,IAAI,CAACY,IAAI,CAACC,KAAK,CAAC,SAAS,CAAC,EAAE;UACpC,IAAI,CAACd,WAAU,GAAI,8BAA6B;UAChD,IAAI,CAACC,IAAG,GAAI,IAAG;UACf;QACF;MACF;IACF,CAAC;IAED,MAAMc,UAAUA,CAAA,EAAG;MACjB,IAAI,CAAC,IAAI,CAACd,IAAI,EAAE;QACd,IAAI,CAACD,WAAU,GAAI,2BAA0B;QAC7C;MACF;MAEA,MAAMgB,QAAO,GAAI,IAAIC,QAAQ,CAAC;MAC9BD,QAAQ,CAACE,MAAM,CAAC,MAAM,EAAE,IAAI,CAACjB,IAAI;MAEjC,IAAI;QACF,MAAMkB,QAAO,GAAI,MAAM5B,KAAK,CAAC6B,IAAI,CAC/B,uCAAuC,EACvCJ,QAAQ,EACR;UACEK,OAAO,EAAE;YACP,cAAc,EAAE;UAClB;QACF,CACF;QACA,IAAI,CAACrB,WAAU,GAAImB,QAAQ,CAACxB,IAAI,CAAC2B,OAAM;QACvC,IAAI,CAACf,UAAU,CAAC;QAChB,IAAI,CAACL,cAAa,GAAIC,IAAI,CAACC,GAAG,CAAC;;QAE/B;QACA,IAAI,CAACH,IAAG,GAAI,IAAG;QACf,MAAMsB,SAAQ,GAAIC,QAAQ,CAA